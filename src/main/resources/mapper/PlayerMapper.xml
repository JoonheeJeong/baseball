<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.PlayerMapper">

    <insert id="insert">
        insert into player (team_id, name, position) values (#{teamId}, #{name}, #{position})
    </insert>

    <resultMap id="player1" type="domain.Player">
        <id column="id" property="id" />
        <result column="team_id" property="teamId" />
        <result column="name" property="name" />
        <result column="position" property="position" typeHandler="domain.PositionHandler" />
        <result column="created_at" property="createdAt" />
    </resultMap>
    <select id="selectListByTeamId" resultMap="player1">
        select * from player where team_id = #{teamId}
    </select>

</mapper>