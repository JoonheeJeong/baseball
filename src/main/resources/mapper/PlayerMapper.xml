<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.PlayerMapper">

    <insert id="insert">
        <bind name="positionDescription" value="_parameter.getPosition().getDescription()"/>
        insert into player (team_id, name, position) values (#{teamId}, #{name}, #{positionDescription})
    </insert>

</mapper>